---
layout: plain
title: Emerald
---

<div class="container-fluid">

  <%
     base_colors = %w(light primary info success warning danger black dark inverse)

     exclude = %w(light-lter)

     colors = base_colors.map do |c|
       ["#{c}-dk", c, "#{c}-lt", "#{c}-lter"]
     end
  %>

  <% colors.each do |row| %>
      <div class="row text-center">
        <% row.each do |tint| %>
            <% if exclude.include?(tint) %>
                <div class="col-md-3" style="height: 250px; line-height: 250px">
                </div>
            <% else %>
                <div class="col-md-3 box <%= "panel-body-#{tint}" %>" style="height: 250px; line-height: 250px">
                  <%= tint %>
                </div>
            <% end %>

        <% end %>
      </div>
  <% end %>

</div>

<script type="text/javascript">
    function hex(x) {
        return ("0" + parseInt(x).toString(16)).slice(-2);
    }
    function rgb2hex(rgb) {
        rgb = rgb.match(/^rgb\((\d+),\s*(\d+),\s*(\d+)\)$/);
        return "#" + hex(rgb[1]) + hex(rgb[2]) + hex(rgb[3]);
    }
    $('.box').each(function () {
        var $this = $(this);
        var bgColor = $this.css('background-color');
        try {
            $this.append(rgb2hex(bgColor));
        } catch (err) {
        }
    });
</script>