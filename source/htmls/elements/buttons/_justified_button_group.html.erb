<%
klass = 'btn-default' if !defined?(klass) || klass.nil?
%>

<div class="btn-group btn-group-justified">
  <div class="btn-group">
    <button type="button" class="btn <%= klass %>">Left</button>
  </div>
  <div class="btn-group">
    <button type="button" class="btn <%= klass %> btn-default">Middle</button>
  </div>
  <div class="btn-group">
    <button type="button" class="btn <%= klass %> btn-default">Right</button>
  </div>
</div>