<h4>Knobs</h4>

<div class="row text-center">
  <div class="col-md-4">
    <input type="text" class="em-knob" data-color="danger">
  </div>
  <div class="col-md-4">
    <input type="text" class="em-knob" data-color="warning">
  </div>
  <div class="col-md-4">
    <input class="em-knob" data-angleoffset="-125" data-anglearc="250" data-color="success" readonly="readonly">
  </div>
</div>

