<div class="panel panel-success">
  <div class="panel-heading panel-colorize gradient-diag1">
    <%= partial 'htmls/widgets/actions', locals: { colors: true } %>

    <div class="panel-title">
      <span>Menu</span>
    </div>
  </div>

  <div class="panel-body no-padding panel-body-collapse in">

    <nav class="navmenu navmenu-full" role="navigation">
      <ul class="nav navmenu-nav">
        <li class="active"><a href="#"><i class="fa fa-inbox fa-lg"></i> Inbox</a></li>
        <li><a href="#"><i class="fa fa-star fa-lg"></i> Starred</a></li>
        <li><a href="#"><i class="fa fa-flag fa-lg"></i> Flagged</a></li>
        <li><a href="#"><i class="fa fa-plane fa-lg"></i> Sent</a></li>

        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <i class="fa fa-tags fa-lg"></i> Labels <b class="caret"></b>
          </a>
          <ul class="dropdown-menu navmenu-nav" role="menu">

            <% %w(success info primary warning danger).each_with_index do |color, index| %>
              <li class="<%= 'active' if index == 1 %>"><a href="#"><span class="badge badge-<%= color %>-lt badge-rounded badge-empty badge-grow badge-checkmark"></span> <span><%= color %></span></a></li>
            <% end %>
          </ul>
        </li>
        <li><a href="#"><i class="fa fa-trash-o fa-lg"></i> Deleted</a></li>
      </ul>
    </nav>

  </div>
</div>
