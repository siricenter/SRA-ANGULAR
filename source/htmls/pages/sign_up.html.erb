---
title: Emerald - Register
layout: plain
---

<div class="em-page-center-parent">
<div class="em-page-center">
  <div class="container">
    <div class="row">
      <div class="col-sm-6 col-sm-offset-3 col-lg-4 col-lg-offset-4">
        
        <div class="actionable" id="actionable-sign-up">
          <div class="actionable-front component-shadow">
            <div class="panel">
              <div class="panel-body">
                <div class="text-center">
                  <%= image_tag 'emerald64.png' %>
                  <h3>
                    <strong>EMERALD</strong> <span class="thin">REGISTER</span>
                  </h3>
                </div>

                <div class="padded">
                  <form action="<%= url_for('/htmls/dashboard.html') %>" id="form-sign-up-demo">

                    <% %w(name.text username.text email.text password.password confirm_password.password).map{|f|f.split('.')}.each do |field| %>
                        <div class="form-group">
                          <input type="<%= field.last %>" class="form-control" placeholder="<%= field.first.humanize %>" rel="jvfloat">
                        </div>
                    <% end %>

                    <div class="form-group actions">
                      <a class="btn btn-success-lt btn-block actionable-action" name="commit">Register</a>
                    </div>

                  </form>
                </div>

                <div class="text-center form-group">
                  Already have an account?

                  <% link_to '/htmls/pages/sign_in.html', relative: true do %>
                      <strong>Sign In</strong>
                  <% end %>

                </div>
              </div>
            </div>
          </div>
          <div class="actionable-back component-shadow bg-white padded">
            <%= partial 'htmls/elements/actionable/success' %>
          </div>
        </div>
        
        <div class="text-center">
          &copy; 2014 Emerald Inc. All Rights Reserved
        </div>
      </div>
    </div>
  </div>
</div>
</div>

<script type="text/javascript">
  $('#actionable-sign-up').on('acted.actionable', function(){
    var url = $('#form-sign-up-demo').attr('action');
    function go() { Turbolinks.visit(url); }
    setTimeout(go, 1000);
  });
</script>