<% @no_breadcrumbs = true %>

<div class="em-background-box text-white" style="background-image: url('<%= image_path('user_profile_blur.jpg') %>')">
  <div class="container-fluid">
    <div class="text-center em-background-box-content">

      <h1 class="base-header">Plans & Pricing</h1>
      <h3 class="thin">Affordable pricing. No upfront fees. No long term contract.</h3>

      <a class="btn btn-sm btn-transparent-light push-top" href="#">Start your FREE TRIAL NOW!</a>

    </div>
  </div>

</div>

<div class="container-fluid">
  <div class="row">

    <%
       plans = {
               beginner: [19],
               premium: [39],
               ultimate: [79]
       }
    %>

    <% plans.each_with_index do |(plan, values), index| %>

        <div class="col-md-4 col-sm-6">

          <div class="panel panel-default sticky-parent-box">
            <% if index == 1 %>
                <div class="sticky-left">POPULAR</div>
            <% end %>
            <ul class="list-unstyled text-center vpadded-row">

              <li class="text-muted">
                <h3 class="base-header"><%= plan.to_s.upcase %></h3>

                <div class="pricing-box">
                  <span class="currency">$</span>
                  <span class="cost"><%= values.first %></span>
                  <span class="period">/MO</span>
                </div>
              </li>

              <li>1 User</li>
              <li class="bg-light-semi"><strong>10</strong> <span class="text-muted">Email Addresses</span></li>
              <li><strong>10GB</strong> <span class="text-muted">Storage</span></li>
              <li class="bg-light-semi"><strong>1</strong> <span class="text-muted">database</span></li>
              <li><i class="fa fa-check text-success"></i> <span class="text-muted">Online Support</span></li>
              <li class="bg-light-semi"><i class="fa fa-check fa-times text-danger"></i> <span class="text-muted">SSL Certificate</span></li>

              <li>
                <a class="btn btn-success-lt" href="#"><i class="fa fa-shopping-cart"></i> Purchase Now!</a>
              </li>

            </ul>
          </div>
        </div>
    <% end %>
  </div>

  <div class="row">
    <div class="col-md-12 text-center">
      <p><a href="#" class="btn btn-primary-lt">Get started with a 30-day free trial</a></p>
      <p>No credit card required</p>
    </div>
  </div>
</div>
