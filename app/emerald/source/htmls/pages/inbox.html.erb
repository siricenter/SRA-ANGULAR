<% @no_breadcrumbs = true %>

<div class="container-fluid">
  <div class="row">
    <div class="col-sm-2">
      <% link_to '/htmls/pages/inbox/compose.html', class: 'btn btn-primary btn-block' do %>
        <i class="fa fa-pencil"></i> Compose
      <% end %>
      <%= partial 'htmls/pages/inbox/folders' %>
    </div>
    <div class="col-sm-10">
      <ul class="nav nav-tabs nav-justified-all">
        <li class="active">
          <%= link_to 'Primary', '#' %>
        </li>
        <li>
          <%= link_to 'Social', '#' %>
        </li>
        <li>
          <%= link_to 'Updates', '#' %>
        </li>
      </ul>
      <div class="panel panel-default">
        <div class="panel-body no-padding-top">
          <table class="table table-striped tablesaw tablesaw-stack" data-mode="stack">
            <thead>
              <tr>
                <th class="inbox-toggles">
                  <label>
                    <input type="checkbox" rel="icheck" class="table-checkable">
                  </label>
                  <label class="text-muted">
                    <i class="fa fa-star-o fa-lg"></i>
                  </label>
                </th>
                <th>Sender</th>
                <th>Message</th>
                <th class="hidden-xs">&nbsp;</th>
                <th class="hidden-xs">Info</th>
              </tr>
            </thead>
            <tbody data-link="row" class="rowlink">
            <% 20.times do |j| %>
              <tr class="inbox-row">
                <td class="inbox-toggles">
                  <label>
                    <input type="checkbox" rel="icheck" class="table-checkable-row">
                  </label>
                  <% i = [0, 1].sample %>
                  <label class="<%= ['text-muted', 'text-warning'][i] %>">
                    <i class="fa <%= ['fa-star-o', 'fa-star'][i] %> fa-lg"></i>
                  </label>
                </td>
                <td class="inbox-name">
                  <%= [lorem.name, lorem.email].sample %>
                  <span class="hidden-lg hidden-md hidden-sm">
                    <%= ['&nbsp;', '<i class="fa fa-paperclip"></i>'].sample %>
                  </span>
                </td>
                <td class="inbox-email">
                  <% link_to '/htmls/pages/inbox/email.html' do %>
                    <span>
                      <% content_tag j < 7 ? :strong : :span do %>
                        <%= lorem.words(2).capitalize %>
                      <% end %>
                      <span><%= lorem.sentence %></span>
                    </span>
                  <% end %>
                <td class="hidden-xs">
                  <%= ['&nbsp;', '<i class="fa fa-paperclip"></i>'].sample %>
                </td>
                </td>
                <td class="hidden-xs inbox-info">
                  <%= lorem.date('%e %b') %>
                </td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
